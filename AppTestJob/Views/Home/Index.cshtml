@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to AppTestJob</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .welcome-container {
            margin-top: 100px;
            padding: 30px;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .welcome-heading {
            color: #007bff;
            font-size: 3rem;
        }

        .welcome-text {
            font-size: 1.2rem;
            color: #495057;
        }

        .welcome-text a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .welcome-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 welcome-container">
                <div class="text-center">
                    <h1 class="welcome-heading">Welcome to YourEmployee System</h1>
                    <p class="welcome-text">Explore and manage your employee database with ease. Learn more about <a href="https://docs.microsoft.com/aspnet/core" target="_blank">our documentation</a>.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

