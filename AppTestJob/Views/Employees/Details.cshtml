@model AppTestJob.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details of the employee</h1>

<div>
    <h4>Employee Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name" class="control-label">Employee Name</label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Name" class="control-label">@Model.Name</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Address" class="control-label">Address</label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Address" class="control-label">@Model.Address</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Dob" class="control-label">Date of Birth</label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Dob" class="control-label">@Model.Dob</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Salary" class="control-label">Salary</label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="Salary" class="control-label">@Model.Salary</label>
        </dd>
        <dt class="col-sm-2">
            <label asp-for="IsActive" class="control-label">Active</label>
        </dt>
        <dd class="col-sm-10">
            <label asp-for="IsActive" class="control-label">@Model.IsActive</label>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
